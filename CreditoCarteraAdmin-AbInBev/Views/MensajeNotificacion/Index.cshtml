@model IEnumerable<CreditoCarteraAdmin_AbInBev.Models.MensajeNotificacion>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-white">Configuración de Mensajes</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table text-white-50">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasPrevios)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasPrevios)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Configuracion">Regresar</a>
